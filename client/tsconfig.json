{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    "lib": ["es2023"],
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
}
